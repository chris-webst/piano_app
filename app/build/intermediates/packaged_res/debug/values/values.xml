<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#92A2B3</color>
    <color name="black">#FF000000</color>
    <color name="dark">#155399</color>
    <color name="primary">#155399</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="layer_padding">10dp</dimen>
    <string name="app_name">PianoApp</string>
    <style name="Theme.PianoApp" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>
    <style name="black_key">

        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginLeft">-14dp</item>
        <!-- Customize the drawable resource file in here. -->
        <item name="android:background">@drawable/black_key_selector</item>


    </style>
    <style name="common_key">

        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!-- Customize the drawable resource file in here. -->
        <item name="android:background">@drawable/pressed_normal_selector</item>
        <item name="android:stateListAnimator">@null</item>

    </style>
    <style name="description_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginTop">300dp</item>

    </style>
    <style name="key_1_blue">

        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!-- Customize the drawable resource file in here. -->
        <item name="android:background">@drawable/pressed_normal_selector</item>
        <item name="android:stateListAnimator">@null</item>

    </style>
</resources>