<?xml version="1.0" encoding="utf-8"?>

<!--
    This is used to determine where to switch
    between the "normal key" and "pressed key" style,
    where "normal key" style is default (for "pressed
    key" style the button needs to be pressed)
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item

        android:state_pressed="true"
        android:drawable="@drawable/pressed_key"
        android:paddingTop="10dp">

    </item>

    <item

        android:drawable="@drawable/normal_key"
        android:layout_marginTop="50dp">

    </item>

</selector>