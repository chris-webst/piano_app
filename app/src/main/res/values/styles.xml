<resources>
    <!-- Base application theme, without action bar. -->
    <style name="Theme.PianoApp" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <!--
        Style used for the first normal (standard "white") blue key
        based on things determined in pressed_normal_selector.
    -->
    <style name="key_1_blue" >

        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!-- Customize the drawable resource file in here. -->
        <item name="android:background">@drawable/pressed_normal_selector</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <!--
        Style used for the rest of normal (standard "white") blue keys
        based on things determined in pressed_normal_selector.
    -->
    <style name="common_key">

        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!-- Customize the drawable resource file in here. -->
        <item name="android:background">@drawable/pressed_normal_selector</item>
        <item name="android:stateListAnimator">@null</item>

    </style>

    <!-- Style used for the description of the keys of the third ocateve. -->
    <style name="description_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginTop">300dp</item>

    </style>

    <!-- Style used for the black keys. -->
    <style name="black_key">

        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginLeft">-14dp</item>
        <!-- Customize the drawable resource file in here. -->
        <item name="android:background">@drawable/black_key_selector</item>


    </style>

</resources>